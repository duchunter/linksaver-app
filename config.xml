<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gp.linksaver" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Linksaver</name>
    <description>
      Hybrid Vue + Cordova
    </description>
    <author email="duc71098@gmail.com" href="https://github.com/duchunter">
        Gangplank
    </author>
    <content src="dist/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" height="57" platform="android" src="res/icon/android/icon.png" width="57" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-spinnerdialog" spec="^1.3.2" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="com.gp.linksaver" />
        <variable name="ANDROID_SCHEME" value="com.gp.linksaver" />
        <variable name="ANDROID_HOST" value="gangplank.auth0.com" />
        <variable name="ANDROID_PATHPREFIX" value="/cordova/com.gp.linksaver/callback" />
    </plugin>
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <engine name="android" spec="^7.1.0" />
    <engine name="browser" spec="^5.0.3" />
</widget>
